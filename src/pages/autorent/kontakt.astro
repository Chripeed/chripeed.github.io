---
import ContactForm from "../../components/ContactForm";
import AutorentNavbarLayout from "../../layouts/AutorentNavbarLayout.astro";
import tekst from "../../assets/tekst.json"
---

<AutorentNavbarLayout>
    <div class="flex items-center justify-center font-Florentino mx-12 mt-12">
        <hr class="flex-grow h-1 bg-charcoal-gray border-0 rounded my-4 md:my-2" />
        <h1 class="mx-4 font-bold text-center text-3xl">{tekst.Kontakt_tekst.toUpperCase()}</h1>
        <hr class="flex-grow h-1 bg-charcoal-gray border-0 rounded my-4 md:my-2" />
    </div>
    
    <div
    class="mx-4 md:mx-12 my-6 grid grid-cols-1 md:grid-cols-2 gap-8 justify-items-center font-SortsMillGoudy md:text-lg"
  >
    <div class="mx-4 space-y-6 text-justify md:flex md:flex-col md:justify-center md:items-center">
      <p set:html={tekst.Kontakt_tutvustav_esimene_loik}>
      </p>
      <p>
        {tekst.Kontakt_tutvustav_teine_loik}
      </p>
      <h2 class="text-2xl font-bold">{tekst.Kontakt_meie_meeskond_pealkiri}</h2>
      <p>
        {tekst.Kontakt_meie_meeskond_tekst}
      </p>
    </div>

    <div class="w-full md:px-4 font-Florentino font-bold">
     <ContactForm client:load/>
    </div>
  </div>
      

</AutorentNavbarLayout>